@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Your cart</span>
            <span class="badge badge-secondary badge-pill">@Model.Basket.TotalItems</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Basket.Items)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@item.ProductName</h6>
                        <small class="text-muted mr-1">Unit Price: @item.UnitPriceTry</small> 
                        <small class="text-muted">Quantity: @(item.Quantity)</small>
                    </div>
                    <span class="text-muted">@item.TotalPriceTry</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (TRY)</span>
                <strong>@Model.Basket.TotalPriceTry</strong>
            </li>
        </ul>
    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Shipping address</h4>
        <form method="post">

            <div class="mb-3">
                <label asp-for="Street">Street</label>
                <input asp-for="Street" type="text" class="form-control" placeholder="1234 Main St" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 col-lg-3 mb-3">
                    <label asp-for="City">City</label>
                    <select asp-for="City" class="custom-select d-block w-100">
                        <option value="">Choose...</option>
                        <option>İstanbul</option>
                        <option>Los Angeles</option>
                        <option>New York City</option>
                    </select>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-lg-3 mb-3">
                    <label asp-for="Country">Country</label>
                    <select asp-for="Country" class="custom-select d-block w-100">
                        <option value="">Choose...</option>
                        <option>Turkey</option>
                        <option>United States</option>
                    </select>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-lg-3 mb-3">
                    <label asp-for="State">State</label>
                    <select asp-for="State" class="custom-select d-block w-100">
                        <option value="">Choose...</option>
                        <option>California</option>
                        <option>New York</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-lg-3 mb-3">
                    <label asp-for="ZipCode">Zip</label>
                    <input asp-for="ZipCode" type="text" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <hr class="mb-4">

            <h4 class="mb-3">Payment</h4>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CardHolder">Name on card</label>
                    <input asp-for="CardHolder" type="text" class="form-control" placeholder="">
                    <span asp-validation-for="CardHolder" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CardNumber">Credit card number</label>
                    <input asp-for="CardNumber" type="text" class="form-control" placeholder="">
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <label asp-for="CardExpire">Expiration</label>
                    <input asp-for="CardExpire" type="text" class="form-control" placeholder="mm/yy">
                    <span asp-validation-for="CardExpire" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="CardCvv">CVV</label>
                    <input asp-for="CardCvv" type="text" class="form-control" placeholder="">
                    <span asp-validation-for="CardCvv" class="text-danger"></span>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Complete Payment</button>
        </form>
    </div>
</div>
